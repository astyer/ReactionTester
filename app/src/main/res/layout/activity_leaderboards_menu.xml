<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.app.LeaderboardsMenu"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <Button
        android:id="@+id/toArcL"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="325dp"
        android:layout_height="123dp"
        android:layout_marginTop="35dp"
        android:background="@color/colorPrimary"
        android:elevation="0dp"
        android:onClick="goToSoloMenu"
        android:text="Arcade Leaderboard"
        android:textAllCaps="false"
        android:textSize="26sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toVsL" />

    <Button
        android:id="@+id/toVsL"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="325dp"
        android:layout_height="123dp"
        android:background="@color/colorPrimary"
        android:elevation="0dp"
        android:onClick="goToSoloMenu"
        android:text="Vs Leaderboard"
        android:textAllCaps="false"
        android:textSize="26sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toBottomOf="@+id/toSoloL" />

    <Button
        android:id="@+id/toSoloL"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="325dp"
        android:layout_height="123dp"
        android:background="@color/colorPrimary"
        android:elevation="0dp"
        android:onClick="goToSoloMenu"
        android:text="Solo Leaderboard"
        android:textAllCaps="false"
        android:textSize="26sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="342dp"
        android:layout_height="98dp"
        android:text="Leaderboards"
        android:textAlignment="center"
        android:textColor="?attr/actionModeSplitBackground"
        android:textSize="50sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"
        app:layout_constraintHorizontal_bias="0.492" />
</android.support.constraint.ConstraintLayout>
