<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.app.Shop">

    <TextView
        android:id="@+id/moneyText"
        android:layout_width="187dp"
        android:layout_height="46dp"
        android:layout_marginTop="0dp"
        android:text="0$"
        android:textAlignment="center"
        android:textColor="@android:color/holo_green_light"
        android:textSize="40sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="342dp"
        android:layout_height="67dp"
        android:layout_marginTop="16dp"
        android:text="Shop"
        android:textAlignment="center"
        android:textColor="?attr/actionModeSplitBackground"
        android:textSize="50sp"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Red"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="17dp"
        android:background="@color/colorAccent"
        android:text="10,000$"
        android:textAllCaps="false"
        android:textSize="24sp"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/moneyText" />

    <Button
        android:id="@+id/Purple"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginRight="8dp"
        android:background="@color/colorAccent"
        android:text="10,000$"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/lightBlue"
        app:layout_constraintHorizontal_bias="0.574"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/lightBlue" />

    <Button
        android:id="@+id/lightBlue"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="14dp"
        android:background="@android:color/holo_blue_bright"
        android:text="10,000$"
        android:textAllCaps="false"
        android:textSize="24sp"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Yellow" />

    <Button
        android:id="@+id/lightGreen"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="8dp"
        android:background="@android:color/holo_green_light"
        android:text="10,000$"
        android:textAllCaps="false"
        android:textSize="24sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/lightBlue"
        app:layout_constraintHorizontal_bias="0.416"
        app:layout_constraintLeft_toRightOf="@+id/lightBlue"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/Yellow"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginRight="28dp"
        android:background="@color/colorAccent"
        android:text="10,000$"
        android:textAllCaps="false"
        android:textSize="24sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/Green"
        app:layout_constraintRight_toLeftOf="@+id/Green" />

    <Button
        android:id="@+id/Green"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="14dp"
        android:background="@color/colorAccent"
        android:text="10,000$"
        android:textAllCaps="false"
        android:textSize="24sp"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Red" />

    <Button
        android:id="@+id/Blue"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="28dp"
        android:background="@color/colorAccent"
        android:text="10,000$"
        android:textAllCaps="false"
        android:textSize="24sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/Green"
        app:layout_constraintLeft_toRightOf="@+id/Green" />

    <Button
        android:id="@+id/Orange"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="17dp"
        android:background="@color/colorAccent"
        android:text="10,000$"
        android:textAllCaps="false"
        android:textSize="24sp"
        app:layout_constraintLeft_toRightOf="@+id/Red"
        app:layout_constraintTop_toBottomOf="@+id/moneyText" />

    <Button
        android:id="@+id/Pink"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginRight="28dp"
        android:layout_marginTop="17dp"
        android:background="@color/colorAccent"
        android:text="Selected"
        android:textAllCaps="false"
        android:textSize="24sp"
        app:layout_constraintRight_toLeftOf="@+id/Red"
        app:layout_constraintTop_toBottomOf="@+id/moneyText" />

    <ImageButton
        android:id="@+id/Rainbow"
        android:layout_width="100dp"
        android:layout_height="97dp"
        android:layout_marginBottom="17dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lightBlue"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/rainbowbacksmall" />

    <ImageButton
        android:id="@+id/Choing"
        android:layout_width="100dp"
        android:layout_height="97dp"
        android:layout_marginBottom="17dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.416"
        app:layout_constraintLeft_toRightOf="@+id/Rainbow"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lightGreen"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/choingfacesmall" />

    <ImageButton
        android:id="@+id/Lightning"
        android:layout_width="100dp"
        android:layout_height="97dp"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="28dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/Rainbow"
        app:layout_constraintTop_toBottomOf="@+id/Purple"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/bluelightning" />

    <TextView
        android:id="@+id/lightningText"
        android:layout_width="100dp"
        android:layout_height="88dp"
        android:layout_marginRight="28dp"
        android:text="\n50,000$"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/rainbowText"
        app:layout_constraintRight_toLeftOf="@+id/Rainbow" />

    <TextView
        android:id="@+id/rainbowText"
        android:layout_width="100dp"
        android:layout_height="88dp"
        android:text="\n75,000$"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/lightBlue"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.498" />

    <TextView
        android:id="@+id/ChoingText"
        android:layout_width="100dp"
        android:layout_height="88dp"
        android:text="\n99,999$"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/rainbowText"
        app:layout_constraintLeft_toRightOf="@+id/rainbowText"
        android:layout_marginLeft="28dp" />

</android.support.constraint.ConstraintLayout>
